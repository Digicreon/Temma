# @link	https://editorconfig.org

# top-most EditorConfig file
root = true

# default files configuration
[*]
indent_style = tab
tab_width = 8
end_of_line = lf
charset = utf-8
insert_final_newline = false
trim_trailing_whitespace = false

# PHP and JS files
[*.{php,js}]
insert_final_newline = true
trim_trailing_whitespace = true

# Smarty templates
[*.tpl]
trim_trailing_whitespace = true

# YAML files
[*.{yml,yaml}]
indent_size = 2

