// Composer autoload
@include_once(__DIR__ . '/../vendor/autoload.php');

// Temma autoloader with include path
@include_once(__DIR__ . '/../lib/Temma/Base/Autoload.php');
\Temma\Base\Autoload::autoload([
	__DIR__ . '/../lib',
	__DIR__ . '/../cli',
]);

// Comma execution
$comma = new \Temma\Comma\Comma(__DIR__ . '/..');
$comma->exec();

